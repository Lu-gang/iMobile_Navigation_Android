<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/ly_route_show_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/poi_spinner_bg_shadow_normal">
        
        <ImageButton
            android:id="@+id/btn_route_show_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_selector_back" />
        
		<TextView
            android:id="@+id/txt_route_show_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="路线"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"/>  
    </RelativeLayout>
</RelativeLayout>