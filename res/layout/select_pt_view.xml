<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/ly_select_pt_view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/poi_spinner_bg_shadow_normal">
        
        <ImageButton
            android:id="@+id/btn_select_pt_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_selector_back" />
            
		<TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="地图选点"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"/>  
    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/ly_select_pt_view_bottom"
	 	android:layout_width="match_parent"
	 	android:layout_height="60dp"
	 	android:layout_alignParentBottom="true"
		android:layout_margin="8dp"
    	android:background="@drawable/layout_border_introduction_list">
	 	<TextView
	      	android:id="@+id/txt_select_pt_view_ok"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	      	android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="20dp"
			android:textSize="18sp"
			android:text="确定"
			android:textColor="#007aff"/>
	 	<TextView
	      	android:layout_width="1dp"
	      	android:layout_height="match_parent"
	      	android:layout_margin="10dp"
	      	android:background="#BFBFBF"
	      	android:layout_toLeftOf="@id/txt_select_pt_view_ok"/>
		<TextView
			android:id="@+id/txt_select_pt_view_name"
			android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	      	android:layout_alignParentLeft="true"
	      	android:layout_marginLeft="10dp"
	      	android:layout_marginTop="5dp"
	        android:text="未知地点"
	        android:textSize="15sp"
	        android:textColor="#000000" />
		<TextView
			android:id="@+id/txt_select_pt_view_distance"
			android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	      	android:layout_alignParentLeft="true"
	      	android:layout_below="@id/txt_select_pt_view_name"
	      	android:layout_marginLeft="10dp"
	      	android:layout_marginTop="5dp"
	        android:text="距离1km "
	        android:textSize="12sp"
	        android:textColor="#a2a2a2" />
	</RelativeLayout>  
</RelativeLayout>