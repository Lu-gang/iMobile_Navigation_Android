<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

	<LinearLayout
	 	android:layout_width="match_parent"
	 	android:layout_height="wrap_content"
		android:layout_centerVertical="true"
	   	android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:layout_margin="8dp"
	    android:background="@drawable/layout_border_introduction_list" >
	
	    <RelativeLayout
		 	android:layout_width="match_parent"
		 	android:layout_height="wrap_content">
		 	<ImageButton
		      	android:id="@+id/btn_poi_show_detail"
		      	android:layout_width="wrap_content"
		      	android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		      	android:layout_centerVertical="true"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
		      	android:background="@drawable/icon_detail"/>
		 	
			<TextView
				android:id="@+id/txt_poi_show_name"
				android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		      	android:layout_alignParentLeft="true"
		      	android:layout_marginLeft="10dp"
		      	android:layout_marginTop="5dp"
		        android:text="未知地点"
		        android:textSize="15sp"
		        android:textColor="#000000" />
			<TextView
				android:id="@+id/txt_poi_show_distance"
				android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		      	android:layout_alignParentLeft="true"
		      	android:layout_below="@id/txt_poi_show_name"
		      	android:layout_marginLeft="10dp"
		      	android:layout_marginTop="5dp"
		        android:text="距离1km "
		        android:textSize="12sp"
		        android:textColor="#a2a2a2" />
		</RelativeLayout>  

	    <TextView
			android:layout_width="match_parent"
	 		android:layout_height="1dp"
	 		android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
	    	android:background="#BFBFBF"/>
	    
		<LinearLayout
		 	android:layout_width="match_parent"
		 	android:layout_height="40dp"
			android:layout_margin="3dp"
			android:gravity="center_vertical">
		
			<Button
				android:id="@+id/btn_poi_show_nearby_place"
				android:layout_width="0dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:drawableLeft="@drawable/icon_nearby_place"
		      	android:paddingLeft="20dp"
		      	android:paddingRight="20dp"
		        android:text="搜周边"
		        android:textSize="15sp"
		        android:textColor="#000000" 
		        android:background="@drawable/btn_navi_normal_selector"/>
			<TextView
		      	android:layout_width="1dp"
		      	android:layout_height="match_parent"
		      	android:layout_margin="10dp"
		      	android:background="#BFBFBF"/>
		  	<Button
				android:id="@+id/btn_poi_show_open_route"
				android:layout_width="0dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:drawableLeft="@drawable/icon_open_route"
		       	android:paddingLeft="20dp"
		      	android:paddingRight="20dp"
		        android:text="到这里"
		        android:textSize="15sp"
		        android:textColor="#000000"
		        android:background="@drawable/btn_navi_normal_selector" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>